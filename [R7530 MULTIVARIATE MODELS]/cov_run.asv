% Murphy PML-AI book, Chapter 3, Covariance

clear; clc; close all;
warning off;

[~, ~, iris_data] = xlsread('./data/iris.xlsx');
data = iris_data(1:50, :);         % Setosa

% covariance calculation
x1 = cell2mat(data(:, 1));
x2 = cell2mat(data(:, 2));
x3 = cell2mat(data(:, 3));
x4 = cell2mat(data(:, 4));

x1_n = x1 - mean(x1);
x2_n = x2 - mean(x2);
x3_n = x3 - mean(x3);
x4_n = x4 - mean(x4);



